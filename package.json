{
  "name": "michaelajaritz",
  "version": "1.0.0",
  "description": "The personal website of Michaela Jaritz, business coach and trainer.",
  "engines": {
    "node": "8.9.0"
  },
  "scripts": {
    "dist": "mkdir -p dist",
    "lint": "eslint ./**/*.js",
    "lint-fix": "eslint --fix ./**/*.js",
    "start": "next start src",
    "build": "next build src",
    "dev": "next dev src",
    "deploy": "now deploy -t $NOW_TOKEN",
    "alias": "now alias -t $NOW_TOKEN",
    "dev:storybook": "start-storybook -p 6006",
    "generate:coverage": "rm -rf ./dist/coverage && jest --coverage",
    "generate:storybook": "rm -rf ./dist/storybook && build-storybook -c .storybook -o ./dist/storybook",
    "config:coverage": "cp ./now.coverage.json ./dist/coverage/lcov-report/now.json",
    "deploy:coverage": "npm run config:coverage && (cd ./dist/coverage/lcov-report && now deploy -t $NOW_TOKEN && now alias -t $NOW_TOKEN)",
    "do:coverage": "npm run generate:coverage && npm run deploy:coverage",
    "config:storybook": "cp ./now.storybook.json ./dist/storybook/now.json",
    "deploy:storybook": "npm run config:storybook && (cd ./dist/storybook && now deploy -t $NOW_TOKEN && now alias -t $NOW_TOKEN)",
    "do:storybook": "npm run generate:storybook && npm run deploy:storybook",
    "deploy:website": "now deploy -t $NOW_TOKEN && now alias -t $NOW_TOKEN",
    "deploy:all": "npm run do:coverage && npm run do:storybook && npm run deploy:website"
  },
  "repository": {
    "type": "git",
    "url": "git+https://vogelino@bitbucket.org/vogelino/michaelajaritz.git"
  },
  "author": "Lucas Vogel <contact@vogelino.com> (http://vogelino.com/)",
  "license": "ISC",
  "homepage": "https://bitbucket.org/vogelino/michaelajaritz#readme",
  "dependencies": {
    "next": "^4.2.3",
    "prop-types": "^15.5.10",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hamburger-button": "0.0.1",
    "react-intl": "^2.4.0",
    "react-markdown": "^3.2.2",
    "react-redux": "^5.0.7",
    "react-sanfona": "^0.4.3",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "styled-components": "^3.1.6",
    "theming": "^1.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-styled-components": "^1.5.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-vogelint-react": "^1.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "now": "^7.3.0",
    "regenerator-runtime": "^0.11.0"
  }
}
